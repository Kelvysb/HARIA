@page "/error"
@inherits ErrorBase

<div class="container h-100 pt-2">
    <div class="m-auto row text-center">
        <img class="col-8 m-auto" src="/images/Error_Purple.svg" />
    </div>
    <div class="row mt-2 text-center">
        <h3 class="m-auto">Something went wrong</h3>
    </div>
    <div class="row mt-2 text-center">
        <button type="button" class="button-solid m-auto" @onclick="ToggleCollapseState">@Translate.Details</button>
    </div>
    <div class="row mt-2 collapsible @(Collapsed ? "collapsed" : "expanded")">
        @if (HariaDiagnosticService?.State.CurrentError != null)
        {
            <p>@HariaDiagnosticService?.State.CurrentError.Message</p>
            <p>@HariaDiagnosticService?.State.CurrentError.StackTrace</p>
            <b>@Translate.SeeLogs</b>
        }
    </div>
</div>